<%= simple_form_for :search, url: kanji_index_path, remote: true, method: :get do |f| %>
  <fieldset class="form-group">
  	<legend class="col-form-label pt-0">JLPT level</legend>
  	<div class="custom-control custom-checkbox custom-control-inline">
      <input class="custom-control-input" type="checkbox" id="exampleInlineCheckbox1" name="query[jlpt]" value="1" required="">
      <label class="custom-control-label" for="exampleInlineCheckbox1">N1</label>
    </div>
    <div class="custom-control custom-checkbox custom-control-inline">
      <input class="custom-control-input" type="checkbox" id="exampleInlineCheckbox2" name="query[jlpt]" value="2" required="">
      <label class="custom-control-label" for="exampleInlineCheckbox2">N2</label>
    </div>
    <div class="custom-control custom-checkbox custom-control-inline">
      <input class="custom-control-input" type="checkbox" id="exampleInlineCheckbox3" name="query[jlpt]" value="3" required="">
      <label class="custom-control-label" for="exampleInlineCheckbox3">N3</label>
    </div>
    <div class="custom-control custom-checkbox custom-control-inline">
      <input class="custom-control-input" type="checkbox" id="exampleInlineCheckbox4" name="query[jlpt]" value="4" required="">
      <label class="custom-control-label" for="exampleInlineCheckbox4">N4</label>
    </div>
    <div class="custom-control custom-checkbox custom-control-inline">
      <input class="custom-control-input" type="checkbox" id="exampleInlineCheckbox5" name="query[jlpt]" value="5" required="">
      <label class="custom-control-label" for="exampleInlineCheckbox5">N5</label>
    </div>
  </fieldset>
	
	<div class="search-form-control form-group">
	  <input class="form-control string required" type="text" name="query" id="search_query" placeholder="Enter your search terms here" />
	</div>

	
	<button name="button" type="submit" class="btn btn-flat">
	  <i class="fas fa-search"></i> Search
	</button>
	  
<% end %>

